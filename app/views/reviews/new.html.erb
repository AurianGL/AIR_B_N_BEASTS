<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>New Review <%= @booking.beast.name %></h1>
        <%= link_to 'back to home page', root_path, class: "btn" %>
          <%= simple_form_for [@booking, @review] do |f| %>
            <%= f.input :content %>
            <%= f.input :stars %>
            <%= f.button :submit, class: 'btn btn-primary' %>
          <% end %>
        </div>
  </div>
</div>
