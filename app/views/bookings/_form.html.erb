<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Book <%= @beast.name %></h1>

      <% if current_user == @beast.user %>
        <%= link_to 'back to home page', root_path, class: "btn" %>
      <% else %>
          <%= simple_form_for [@beast, @booking] do |f| %>
            <%= f.input :start_date %>
            <%= f.input :end_date %>
            <%= f.hidden_field :beast_id, value: @beast.id %>
            <%= f.button :submit, class: 'btn btn-primary' %>
          <% end %>
        </div>
      <% end %>
  </div>
</div>
