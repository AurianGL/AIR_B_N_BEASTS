<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new booking</h1>

      <%= simple_form_for [@beast, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.hidden_field :beast_id, value: @beast.id %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
