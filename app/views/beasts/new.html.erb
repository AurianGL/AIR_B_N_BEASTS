<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>We need a few informations about your beast</h1>

      <%= simple_form_for @beast do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :dangerosity %>
        <%= f.input :price %>
        <%= f.input :species, collection: Beast::SPECIES %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
